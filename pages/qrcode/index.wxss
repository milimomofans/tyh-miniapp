/* pages/qrcode/index.wxss */
page{
  background: rgba(249,249,249,1);
}
.avater{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding-top: 50rpx;
}
.avater image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.nickName{
  font-size: 26rpx;
  margin-top: 15rpx;
}
.shareInfo{
  width: 500rpx;
  border-radius: 20rpx;
  background: white;
  margin:50rpx auto;
  text-align: center;
  padding-bottom: 40rpx;
}
.shareInfo image{
  width: 500rpx;
  height: 500rpx;
}
.shareInfo .share_name{
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.shareInfo .share_title {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.buttons{
  display: flex;
  width: 690rpx;
  margin:50rpx auto;
}
.buttons button{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 26rpx;
}
button{
  padding: 0;
  line-height: normal;
  background-color: none;
  border: none;
}
button::after {
  border: none;
}
button image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}